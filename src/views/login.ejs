<!DOCTYPE html>
<html lang="en">

<head>
  <% include partials/head %>
</head>

<body class="container">

  <div id="form">
    <p>Please login to your account</p>
    <hr />
    <form action="/login" method="post">
      <div class="form-group">
        <label for="form_username">Username</label>
        <input id="form_username" type="text" name="username" />
      </div>
      <div class="form-group">
        <label for="form_password">Password</label>
        <input id="form_password" type="password" name="password" />
      </div>
      <% var emptyfields %>
      <% if(emptyfields != "") { %>
      <div class="alert alert-danger" role="alert">
        <%= emptyfields %>
      </div>
      <% } %>
      <button class="btn btn-primary btn-block" id="connect">Connect</button>
    </form>
    <hr />
    <button class="btn btn-success btn-block" type="submit" href="/signup" onClick='document.location.href="/signup"'>
      Create an account
    </button>
  </div>



</body>

</html>

<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>